
class log:
    def __init__(self,f,name = ""):
        self.FNAME = f

        F = open(self.FNAME,"w")
        if len(name) != 0:
            F.write(name + "\n")
        F.close()

    def log(self,data,PRINT = True):

        if PRINT:
            print(data)

        F = open(self.FNAME,"a")
        if len(data) > 0:
            F.write(str(data[0]))
            for d in data[1:]:
                F.write(",{}".format(d))
            F.write("\n")
        else:
            F.write(str(data) + "\n")
        F.close()

